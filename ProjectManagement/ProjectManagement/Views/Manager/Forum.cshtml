@model ProjectManagement.ViewModel.VMForum

@{
                /**/

                ViewBag.Title = "Forum";
}

<h2>Forum</h2>

@{
    WebGrid forum = new WebGrid(Model.forums, rowsPerPage: 5);
}
@forum.GetHtml(
    tableStyle: "table table-bordered table-responsive table-hover ",
    columns: forum.Columns(
               forum.Column("Title", "כותרת"),
               forum.Column("Author", "מחבר"),
               forum.Column("DateOfPost", "תאריך"),
               forum.Column("", format: @<text>
                <button class="edit-user display-mode">צפה בפורום</button>
            </text>, style: "col3Width", canSort: false)
               )
           )